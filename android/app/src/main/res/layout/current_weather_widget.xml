<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_container"
    style="@style/Widget.Android.AppWidget.Container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="?android:attr/colorBackground"
    android:theme="@style/Theme.Android.AppWidgetContainer">

    <!-- Top row: weather icon + temperature -->
    <LinearLayout
        android:id="@+id/current_first_row"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/current_weather_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_default_weather"
            android:background="?android:attr/colorBackground"/>

        <TextView
            android:id="@+id/current_temperature_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25Â°C"
            android:textSize="36sp"
            android:paddingStart="6dp"
            android:background="?android:attr/colorBackground"/>
    </LinearLayout>

    <!-- Second row: city name and condition -->
    <LinearLayout
        android:id="@+id/current_second_row"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/current_city_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City Name"
            android:textSize="14sp"
            android:ellipsize="end"
            android:singleLine="true"
            android:background="?android:attr/colorBackground"/>

        <TextView
            android:id="@+id/current_weather_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cloudy"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:singleLine="true"
            android:background="?android:attr/colorBackground"/>
    </LinearLayout>

    <!-- Third row: water drop icon and precipitation probablity -->
    <LinearLayout
        android:id="@+id/current_third_row"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right"
    >
    <ImageView
            android:id="@+id/current_precipitation_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/rain_on_light"
            android:scaleType="fitCenter"
            android:background="?android:attr/colorBackground"/>
    <TextView
            android:id="@+id/current_precipitation_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="75%"
            android:textSize="14sp"
            android:paddingStart="6dp"
            android:tint="?android:attr/textColorPrimary"
            android:background="?android:attr/colorBackground"/>
    </LinearLayout>
</LinearLayout>